\ProvidesExplFile{\ExplFileName}{}{}{}

\sys_if_engine_pdftex:TF
  {
    \ctex_zhmap_case:nnn
      {
        \ctex_punct_set:n { ubuntu }
        \setCJKmainfont
          [ BoldFont = SourceHanSerifCN-VF.ttf , SourceHanSerifCN-VF.ttf ] { simsun.ttc }
        \setCJKsansfont { SourceHanSerifCN-VF.ttf }
        \setCJKmonofont { SourceHanSerifCN-VF.ttf }
        \setCJKfamilyfont { zhkai }  { SourceHanSerifCN-VF.ttf }
        \setCJKfamilyfont { zhfs }   { SourceHanSerifCN-VF.ttf }
        \setCJKfamilyfont { zhsong } { simsun.ttc }
        \setCJKfamilyfont { zhhei }  { SourceHanSerifCN-VF.ttf }
        %\setCJKfamilyfont { zhli }   { SourceHanSerifCN-VF.ttf }
        %\setCJKfamilyfont { zhyou }  { SourceHanSerifCN-VF.ttf }
        \ctex_punct_map_family:nn { \CJKrmdefault } { zhsong }
        \ctex_punct_map_family:nn { \CJKsfdefault } { zhhei }
        \ctex_punct_map_family:nn { \CJKttdefault } { zhfs }
        \ctex_punct_map_itshape:nn { \CJKrmdefault } { zhkai }
        \ctex_punct_map_bfseries:nn { \CJKrmdefault } { zhhei }
      }
      {
        \tl_set:Nn \CJKrmdefault { rm }
        \tl_set:Nn \CJKsfdefault { sf }
        \tl_set:Nn \CJKttdefault { tt }
      }
  }
  {
    \setCJKmainfont
      [ BoldFont = SimHei , ItalicFont = [ SourceHanSerifCN-VF.ttf ] ] { SimSun }
    \setCJKsansfont { SimHei }
    \setCJKmonofont { [ SourceHanSerifCN-VF.ttf ] }
    \setCJKfamilyfont { zhsong }  { SimSun }
    \setCJKfamilyfont { zhhei }   { SimHei }
    \setCJKfamilyfont { zhkai }   { [ SourceHanSerifCN-VF.ttf ] }
    \setCJKfamilyfont { zhfs }    { [ SourceHanSerifCN-VF.ttf ] }
    %\setCJKfamilyfont { zhli }    { LiSu }
    %\setCJKfamilyfont { zhyou }   { YouYuan }
  }

\NewDocumentCommand \songti   { } { \CJKfamily { zhsong } }
\NewDocumentCommand \heiti    { } { \CJKfamily { zhhei } }
\NewDocumentCommand \fangsong { } { \CJKfamily { zhfs } }
\NewDocumentCommand \kaishu   { } { \CJKfamily { zhkai } }
%\NewDocumentCommand \lishu    { } { \CJKfamily { zhli } }
%\NewDocumentCommand \youyuan  { } { \CJKfamily { zhyou } }

\endinput
